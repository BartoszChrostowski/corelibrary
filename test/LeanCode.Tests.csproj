<Project Sdk="Microsoft.NET.Sdk" DefaultTargets="RunTests">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>LeanCode.Tests</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="**/*.cs" />
    <TestProjects Include="**/*.csproj" Exclude="LeanCode.Tests.csproj;LeanCode.Benchmarks/LeanCode.Benchmarks.csproj;Testing/LeanCode.IntegrationTestHelpers.Tests/LeanCode.IntegrationTestHelpers.Tests.csproj;LeanCode.Test.Helpers/LeanCode.Test.Helpers.csproj" />

    <ProjectReference Include="@(TestProjects)" />
  </ItemGroup>

  <Target Name="RunTests" DependsOnTargets="Build">
    <ItemGroup>
      <TestProjectsAssemblies Include="@(_ResolvedProjectReferencePaths)" Condition="$([System.String]::new('%(FullPath)').Contains('test')) And '%(TargetFrameworks)' == 'netcoreapp2.1'" />
    </ItemGroup>

    <exec
      Command="dotnet vstest @(TestProjectsAssemblies -> '&quot;%(FullPath)&quot;', ' ')"
      WorkingDirectory="$(TargetDir)" />
  </Target>

</Project>
