<Project>
  <PropertyGroup>
    <Authors>LeanCode</Authors>
    <Description>LeanCode Core library</Description>
    <IsPackable>true</IsPackable>
    <LangVersion>latest</LangVersion>

    <EmbedAllSources>true</EmbedAllSources>
    <DebugType>portable</DebugType>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

    <!-- Generate the documentation but don't require it on all public members -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>

    <!-- Version is specified using external -->
    <Version>$(VERSION)</Version>
    <InformationalVersion>$(VERSION)-$(GIT_COMMIT)</InformationalVersion>
  </PropertyGroup>

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))"
          Condition="Exists($([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../')))"/>
</Project>
