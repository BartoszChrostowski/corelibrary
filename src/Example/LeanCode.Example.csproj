<Project Sdk="Microsoft.NET.Sdk.Web">
  <Import Project="../targets/Dependencies.targets" />

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <DebugType>portable</DebugType>
    <AssemblyName>LeanCode.Example</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>LeanCode.Example</PackageId>
    <UserSecretsId>LeanCode.Example</UserSecretsId>
    <RuntimeFrameworkVersion>1.1.1</RuntimeFrameworkVersion>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="appsettings*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="Content/**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <Import Project="../targets/Common.targets" />

  <ItemGroup>
    <ProjectReference Include="../Core/LeanCode.Components/LeanCode.Components.csproj" />
    <ProjectReference Include="../Core/LeanCode.Components.Startup/LeanCode.Components.Startup.csproj" />
    <ProjectReference Include="../Core/LeanCode.Pipelines.Autofac/LeanCode.Pipelines.Autofac.csproj" />
    <ProjectReference Include="../Domain/LeanCode.CQRS.Default/LeanCode.CQRS.Default.csproj" />

    <ProjectReference Include="../Domain/LeanCode.CQRS/LeanCode.CQRS.csproj" />
    <ProjectReference Include="../Domain/LeanCode.CQRS.Cache/LeanCode.CQRS.Cache.csproj" />
    <ProjectReference Include="../Domain/LeanCode.CQRS.Validation.Fluent/LeanCode.CQRS.Validation.Fluent.csproj" />
    <ProjectReference Include="../Domain/LeanCode.CQRS.RemoteHttp.Server/LeanCode.CQRS.RemoteHttp.Server.csproj" />
    <ProjectReference Include="../Domain/LeanCode.CQRS.RemoteHttp.Client/LeanCode.CQRS.RemoteHttp.Client.csproj" />
    <ProjectReference Include="../Domain/LeanCode.DomainModels/LeanCode.DomainModels.csproj" />
    <ProjectReference Include="../Domain/LeanCode.DomainModels.EF/LeanCode.DomainModels.EF.csproj" />
    <ProjectReference Include="../Domain/LeanCode.DomainModels.EventsExecution/LeanCode.DomainModels.EventsExecution.csproj" />
    <ProjectReference Include="../Domain/LeanCode.TimeProvider/LeanCode.TimeProvider.csproj" />
    <ProjectReference Include="../Helpers/LeanCode.Configuration/LeanCode.Configuration.csproj" />
    <ProjectReference Include="../Infrastructure/LeanCode.Cache/LeanCode.Cache.csproj" />
    <ProjectReference Include="../Infrastructure/LeanCode.Cache.AspNet/LeanCode.Cache.AspNet.csproj" />
    <ProjectReference Include="../Infrastructure/LeanCode.PushNotifications/LeanCode.PushNotifications.csproj" />
    <ProjectReference Include="../Infrastructure/LeanCode.PushNotifications.EF/LeanCode.PushNotifications.EF.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="$(MvcVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="$(ExtensionsVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="$(ExtensionsVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="1.1.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="1.1.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="1.1.1" PrivateAssets="All" />
    <!-- Required, it generates UserSecretsIdAttribute on the assembly -->
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="$(ExtensionsVersion)" />
    <PackageReference Include="Serilog.Sinks.RollingFile" Version="3.3.0" />
    <PackageReference Include="Serilog.Sinks.Literate" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.EntityFrameworkCore.Tools.DotNet" Version="1.0.0" />
  </ItemGroup>

</Project>
