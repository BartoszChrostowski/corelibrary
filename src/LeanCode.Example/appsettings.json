{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.RollingFile",
      "Serilog.Sinks.Literate"
    ],
    "MinimumLevel": "Verbose",
    "SystemLoggers": {
      "Microsoft": "Information",
      "System": "Information",
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/{Date}.txt"
        }
      },
      {
        "Name": "LiterateConsole"
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  }
}
