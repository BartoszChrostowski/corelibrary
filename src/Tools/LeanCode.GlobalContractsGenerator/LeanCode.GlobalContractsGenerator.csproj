<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>LeanCode.GlobalContractsGenerator</AssemblyName>
    <ToolCommandName>generate</ToolCommandName>
    <PackageId>LeanCode.GlobalContractsGenerator</PackageId>
    <Authors>LeanCode</Authors>
    <Description>Tool for generating .ts from project contracts</Description>
    <IsPackable>true</IsPackable>

    <PackAsTool>True</PackAsTool>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Domain/LeanCode.CQRS/LeanCode.CQRS.csproj" />
    <ProjectReference Include="../../Domain/LeanCode.CQRS.Security/LeanCode.CQRS.Security.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Glob" />
    <PackageReference Include="Microsoft.CodeAnalysis" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" />
    <PackageReference Include="Newtonsoft.Json" />
  </ItemGroup>
</Project>
