<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>dotnet-generate</AssemblyName>
  </PropertyGroup>
  <Import Project="../../targets/Lib.targets" />

  <PropertyGroup>
    <PackageId>LeanCode.ContractsGenerator</PackageId>
    <Authors>LeanCode</Authors>
    <Description>Tool for generating .ts from project contracts</Description>
    <IsPackable>true</IsPackable>

    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <PackageType>DotnetCliTool</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Domain/LeanCode.CQRS/LeanCode.CQRS.csproj" />
    <ProjectReference Include="../../Domain/LeanCode.CQRS.Security/LeanCode.CQRS.Security.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Glob" Version="$(GlobVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis" Version="$(MicrosoftCodeAnalysisVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="$(MicrosoftExtensionsConfigurationVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="$(MicrosoftExtensionsConfigurationBinderVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="$(MicrosoftExtensionsConfigurationCommandLineVersion)" />
  </ItemGroup>
</Project>
